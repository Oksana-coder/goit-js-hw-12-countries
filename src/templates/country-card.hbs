<div class="country-card">
    <h2 class="card-title">{{0.name}}</h2>
    <div class="card-body">
        <div>
            <p class="card-text"><b>Capital: </b>{{0.capital}}</p>
            <p class="card-text"><b>Population: </b>{{0.population}}</p>
            <p class="card-text"><b>Languages: </b></p>
            <ul>
                {{#each 0.languages}}
                <li class="language">{{name}}</li>
                {{/each}}
            </ul>
        </div>

        <div class="flag-image">
            <img src="{{0.flag}}" alt="{{0.name}}" width="240">
        </div>
    </div>

</div>